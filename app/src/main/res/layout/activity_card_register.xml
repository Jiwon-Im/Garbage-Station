<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorDark"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/menuImg"
            android:layout_width="23dp"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/menu" />

        <TextView
            android:id="@+id/topBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:text="카드등록"
            android:textColor="@color/colorWhite"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:id="@+id/textVCardnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="84dp"
        android:text="카드번호"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Card_Num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="1234 1234 1234 1234"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/textVCardnum"
        app:layout_constraintTop_toBottomOf="@+id/textVCardnum"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textVmmyy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유효기간"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Card_Num"
        app:layout_constraintStart_toStartOf="@+id/Mm_Yy"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Mm_Yy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="18dp"
        android:ems="10"
        android:hint="MM/YY"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/Card_Num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Card_Num"
        app:layout_constraintTop_toBottomOf="@+id/textVmmyy"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textVBirdat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생년월일"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Card_Pass"
        app:layout_constraintStart_toStartOf="@+id/Bir_Date"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Bir_Date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="2018.03.01"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="@+id/Card_Pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Card_Pass"
        app:layout_constraintTop_toBottomOf="@+id/textVBirdat"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textVCardPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="비밀번호"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/Card_Pass"
        app:layout_constraintTop_toBottomOf="@+id/Card_Num"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/Card_Pass"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="14dp"
        android:ems="10"
        android:hint="앞 두자리"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/Bir_Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVCardPass"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/CardRegister_button"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="60dp"
        android:background="@color/colorLight"
        android:text="등록하기"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bir_Date"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>